@{
	var menu = new List<string>();

	menu.AddRange(new string[] { "Events", "Ships", "Bases", "Messages", "Map", "Scoreboard", "Profile", "Help" });
}
<!DOCTYPE html>
<html>
  <head>
  
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="description" content="Space Traffic - Space trading multiplayer browser game." />
	<meta name="author" xml:lang="cs" content="Space Traffic Team" />
	<meta http-equiv="Content-Style-Type" content="text/css" />
	
	<title>Space Traffic</title>

	<link href='https://fonts.googleapis.com/css?family=Exo:400,800|Audiowide&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
	
	<link href="@Url.Content("~/Content/Game.less")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/themes/base/jquery.ui.base.css")" rel="stylesheet" type="text/css" />
  </head>
  <body>
	<div id="envelope">
		<div id="applicationPanel">
			<div class="leftPart">
				<div class="brick">Česká verze</div>
				<div class="brick">
					<a href="#">Reference</a>
				</div>
			</div>
			<a href="@Url.Action("Index","/")" title="Na hlavní obrazovku" id="logo" class="middlePart">
				<h1>Space Traffic</h1>
			</a>
			<div class="rightPart">
				<div class="brick">@Membership.GetUser().UserName</div>
				<div class="brick">
					<a href="#">Odhlásit se</a>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
		<div id="gameTopPanel">
			<div class="leftPart">
				<div class="brick">
					MENU
				</div>
			</div>
			<div class="middlePart">
				<div class="leftShape"></div>
				<div class="leftOverlay"></div>
				<div class="middleShape"></div>
				<div class="rightShape"></div>
				<div class="rightOverlay"></div>
			</div>
			<div class="rightPart">
				<div class="brick minwidth"><span class="shipsIcon mediumIcon"></span><span class="shipsAmount">5</span></div>
				<div class="brick minwidth"><span class="creditsIcon mediumIcon"></span><span class="creditsAmount"></span></div>
			</div>
			<div class="clearfix"></div>
		</div>
		<div id="menuPanel">
			<ul class="mainmenu">
				@foreach (string menuItem in menu)
				{
					<li>
						<a href="@Url.Action("Index", menuItem, new { Area = "Game" }, null)">
							<img src="@Url.Content("~/Content/images/"+menuItem.ToLower()+"_button_icon.png")" width="32" height="32" />
							@menuItem
						</a>

					</li>
				}
			</ul>

		</div>
		<div id="gameBottomPanel">
			<div id="infoStream"></div>
		</div>
		<div id="content">
			<div id="contextPanel">
				@RenderSection("ContextPanel", false)
			</div>
			@Html.Partial("_Flash")
			<div id="mainPanel">
				@RenderBody()
			</div>
			<div id="viewport">
				@*SVG starsystem viewport*@
			</div>

			@Html.Partial("_Achievements")

		</div>
	  
	  <div id="references">
		<p>&copy; Space Traffic Team | <span lang="cs">ZČU</span> | <span lang="cs">FAV</span> | <span lang="cs">KIV</span></p>
		<p>Sources for background images were taken by Hubble Space Telescope and published by NASA.</p>
	  </div>
	</div>
	@Content.Script("jquery-1.6.4.js",Url)
	@Content.Script("jquery.unobtrusive-ajax.js", Url)
	@Content.Script("jquery-ui-1.8.16.js", Url)
	@Content.Script("jquery.svg.js", Url)
	@Content.Script("jquery.svgdom.js", Url)
	@Content.Script("jquery.cookie.js", Url)
	@Content.Script("mootools-core-1.4.1.js", Url)
	@Content.Script("jquery.flash-message.js", Url)
	@Content.JSImport("~/JS/jsimport", Url)
	@Content.JSImport("~/JS/layoutImport", Url)
	@RenderSection("Scripts", false)
  </body>
</html>
