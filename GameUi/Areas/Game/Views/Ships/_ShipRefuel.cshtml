
<div class="ajax" id="refuelingForm">
	<h4>Natankovat</h4>
	<strong>Cena paliva: @ViewBag.trader.FuelPrice</strong>
		@using (Html.BeginForm())
	{
			<input type="number" name="Amount" min="1" max="@Math.Max(ViewBag.maxToBuy, 10)" value="@Math.Max(ViewBag.maxToBuy, 1)" />
			<input type="submit" value="Natankovat" />
		
	}
</div>
<script>
	$('#refuelingForm').on('successSend', function () {
		$('.refreshButton').click();
	});
</script>