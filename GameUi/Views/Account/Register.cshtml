@model SpaceTraffic.GameUi.Models.AccountInfoModel
@{
    ViewBag.Title = "Registerace";
}

@Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
<div class="form-wrapper">
<!-- Co s timhle? .....
<p>
    Passwords are required to be a minimum of @*Membership.MinRequiredPasswordLength*@ characters in length.
</p> -->

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div class="form">
        <h1>Registrace</h1>
        <p>
            @Html.TextBoxFor(m => m.NickName, new { required = "", placeholder = "Jméno", autofocus = "" })
            @Html.ValidationMessageFor(m => m.NickName)
        </p>
        <p>
            @Html.TextBoxFor(m => m.Email, new { required = "", placeholder = "E-mail", type = "email" })
            @Html.ValidationMessageFor(m => m.Email)
        </p>
        <p>
            @Html.PasswordFor(m => m.Password, new { required = "", placeholder = "Heslo"})
            @Html.ValidationMessageFor(m => m.Password)
        </p>
        <p>
            @Html.PasswordFor(m => m.ConfirmPassword, new { required = "", placeholder = "Potvrdit heslo" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </p>
        <p>
            @Html.CheckBoxFor(m => m.Rules, new { required = ""})
            <label for="Rules">Souhlasím s <a href="#">podmínkami</a></label>
        </p>        
        <p class="clear">
            <a href="@Url.Action("LogOn", "Account")" class="button cancel">Zrušit</a>
            <input type="submit" value="Registrovat" class="button ok" />
        </p>
    </div>
}
</div>
