@model SpaceTraffic.GameUi.Models.LogOnModel

@{
    ViewBag.Title = "Přihlášení";
}
<!-- Umístit někam výpis chyb -->
@Html.ValidationSummary()
<div class="form-wrapper">

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    <div class="form">
        <h1>Přihlášení</h1>
        <p>
            @Html.TextBoxFor(m => m.UserName, new { required = "", placeholder = "Jméno", autofocus = "" })
            @Html.ValidationMessageFor(m => m.UserName)
        </p>
        <p>
            @Html.PasswordFor(m => m.Password, new { required = "", placeholder = "Heslo" })
            @Html.ValidationMessageFor(m => m.Password)
        </p>
        <p>
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </p>
        <p>
            <input type="submit" value="Log in" class="button login"/>
        </p>
    </div>
}
    <a href="#">&larr; Zapomenuté heslo?</a><a href="@Url.Action("Register","Account")" style="float: right;">Registrovat &rarr;</a>
</div>
