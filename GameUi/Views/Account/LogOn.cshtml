@model SpaceTraffic.GameUi.Models.LogOnModel

@{
    ViewBag.Title = "Přihlášení";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="form-wrapper">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form">
        <h1>Přihlášení</h1>
        <p>
            @Html.TextBoxFor(m => m.UserName, new { required = "", placeholder = "Jméno", maxlength = "50", autofocus = "" })
            @Html.ValidationMessageFor(m => m.UserName)
        </p>
        <p>
            @Html.PasswordFor(m => m.Password, new { required = "", placeholder = "Heslo", maxlength = "100" })
            @Html.ValidationMessageFor(m => m.Password)
        </p>
        <p>
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </p>
        @Html.ValidationSummary(true)
        @if (@ViewBag.notConfirmed)
        {
            <p><a href="@Url.Action("ResendActivationEmail", "Account")">Znovu zaslat aktivační email &rarr;</a></p>
        }
        <p>
            <input type="submit" value="Log in" class="button login"/>
        </p>
    </div>
}
    <div id="login-links">
        <a href="@Url.Action("LostPassword", "Account")">&larr; Zapomenuté heslo?</a><a href="@Url.Action("Register","Account")" style="float: right;">Registrovat &rarr;</a>
    </div>
</div>
