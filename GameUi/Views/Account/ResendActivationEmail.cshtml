@model SpaceTraffic.GameUi.Models.ResendActivationEmailModel

@{
    ViewBag.Title = "Znovuzaslání aktivačního emailu";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script>jQuery.extend(jQuery.validator.messages, { email: "Zadejte validní email." });</script>

<div class="form-wrapper">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form">
            <h2>Znovuzaslání aktivačního emailu</h2>
            <p>
                @Html.TextBoxFor(m => m.Email, new { required = "", placeholder = "E-mail", type = "email", maxlength = "100", autofocus = "" })
                @Html.ValidationMessageFor(m => m.Email)
            </p>
            @Html.ValidationSummary(true)
            <p class="clear">
                <a href="@Url.Action("LogOn", "Account")" class="button cancel">Zrušit</a>
                <input type="submit" value="Odeslat" class="button ok" />
            </p>
        </div>
    }     
</div>
