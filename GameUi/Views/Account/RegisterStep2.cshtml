@model SpaceTraffic.GameUi.Models.PlayerInfoModel

@{
    ViewBag.Title = "Register Step 2";
}

<div class="account-window">
<h2>Create a New Account - Step 2</h2>
<p>
    Use the form below to create a new account. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div class="registration-form">
        <fieldset>
            <legend>Game Account Information</legend>

        <div class="form-fields">
            <table><tr>
                <td class="editor-label">
                    @Html.LabelFor(m => m.NickName)
                </td>
                <td class="editor-field">
                    @Html.TextBoxFor(m => m.NickName)
                    @Html.ValidationMessageFor(m => m.NickName)
                     <img src="@Url.Content("~/Content/images/Account/help.png")" alt="Help" width="18" height="18" title="Your own nickname - must be more the 5 characters" />
                </td>
            </tr></table>
        </div>
        </fieldset>
        <p class="continue-button">
            <input type="submit" value="Continue to Step 3" />
        </p>
    </div>
}
</div>