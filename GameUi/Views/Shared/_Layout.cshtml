<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
	<title>@ViewBag.Title</title>
    <meta name="description" content="Space Traffic - Space trading multiplayer browser game." />


	<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
	
	<!--jinak mi nešlo nalinkovat CSSko-->
	<link href="@Url.Content("~/Content/less/Account.less")" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=Exo:400,700,800|Audiowide&subset=latin,latin-ext' rel='stylesheet' type='text/css'>


	@RenderSection("LinkStyles", false)
	<style type="text/css">
	@RenderSection("Styles", false)
 	</style>
</head>

<body>
    @Content.Script("jquery-2.2.2.min.js", Url)
    @Html.Partial("_Flash")
    <h1 id="layout-title">Space Traffic</h1>
    <div id="planets-wrapper">
        <div id="planets_left">
            <div id="planets_spacer"></div>
            <div class="planet neptune"></div>
            <div class="planet saturne"><img src="@Url.Content("~/Content/images/solarsystem/background_images/saturne_ring.png")" class="saturne-ring" /></div>
            <div class="planet mars"></div>
            <div class="planet venus"></div>
        </div>
        <div class="planet sun"></div>
        <div id="planets_right">
            <div class="planet mercury"></div>
            <div class="planet earth"></div>
            <div class="planet jupiter"></div>
            <div class="planet uranus"><img src="@Url.Content("~/Content/images/solarsystem/background_images/uranus_ring.png")" class="uranus-ring" /></div>
            <div class="planet pluto"></div>
            <div id="planets_spacer"></div>
        </div>
    </div>
    @RenderBody()
    <noscript>Your browser does not support JavaScript!</noscript>

    @Content.Script("../JS/libs/smartresize/smartresize.js", Url)

    <script>
        $(window).smartresize(function () {
            hidePlanets($(document));
        });

        $(document).ready(function () {
            hidePlanets($(document));
        });
    </script>

    @Content.Script("../JS/ui/BackgroundPlanets.js", Url)
	@Content.Script("jquery-migrate-1.4.0.min.js", Url)
	@Content.Script("jquery.unobtrusive-ajax.js", Url)
	@Content.Script("jquery-ui-1.11.4.min.js", Url)
	@Content.Script("jquery.svg-1.5.min.js", Url)
	@Content.Script("jquery.svgdom-1.5.min.js", Url)
	@Content.Script("jquery.cookie.js", Url)
	@Content.Script("mootools-core-1.4.1.js", Url)


	@Content.Script("jquery.tools.min-tips.js", Url)
	@Content.Script("register-tooltips.js", Url)

	@Content.Script("jquery.flash-message.js", Url)

	@Content.JSImport("~/JS/layoutImport", Url)

	
	
	@*@Content.Script("ui/GameWindowTabs.js", Url)
	@Content.Script("steg2d/StarSystemObjects.js", Url)
	@Content.Script("steg2d/StarSystemLoader.js", Url)
	@Content.Script("steg2d/SvgStarSystemMap.js", Url)*@
	@*Content.Script("steg2d/Renderer.js", Url)*@

	
	@RenderSection("Scripts", false)
</body>
</html>
