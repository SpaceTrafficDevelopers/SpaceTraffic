<?xml version="1.0" encoding="utf-8"?>
<economic_levels>
  <economic_level>
    <!-- Úroveň vyspělosti planety  -->
    <level>1</level>
    <!-- Minimální procenta ze spotřeby pro postup na další level -->
    <upgrade_percentage>60</upgrade_percentage>
    <!-- Minimální nutné procenta ze spotřeby pro udržení se na aktuálním levelu -->
    <downgrade_percentage>0</downgrade_percentage>
    <!-- Podmínky pro jednotlivá zboží v daném levelu -->
    <economic_items>
      <!-- 
        Jeden druh zbozí, resp. první druh zboží, které planeta generuje (první podle sequence number)
        is_discovered je indikace, jestli bylo zboží přidáno v tomo levelu nebo nebo ne 
        (pokud ne jsou předchozí 2 atributy v % jinak jako statické hodnoty)
      -->
      <item sequence_number="1" is_discovered="true">
        <!-- produkce zboží na daném levelu -->
        <production>1500</production>
        <!-- spotřeba zboží na daném levelu -->
        <consumption>500</consumption>
      </item>
    </economic_items>
  </economic_level>
  
  <economic_level>
    <level>2</level>
    <upgrade_percentage>80</upgrade_percentage>
    <downgrade_percentage>40</downgrade_percentage>
    <economic_items>
      <item sequence_number="1" is_discovered="false">
        <production>1.5</production>
        <consumption>1.5</consumption>
      </item>
      <!-- nove objeveny druh zbozi musi mit discovered true -->
      <item sequence_number="2" is_discovered="true">
        <production>1500</production>
        <consumption>500</consumption>
      </item>
    </economic_items>
  </economic_level>
  
  <economic_level>
    <level>3</level>
    <upgrade_percentage>90</upgrade_percentage>
    <downgrade_percentage>80</downgrade_percentage>
    <economic_items>
      <item sequence_number="1" is_discovered="false">
        <production>1.1</production>
        <consumption>0.95</consumption>
      </item>
      <item sequence_number="2" is_discovered="false">
        <production>1.5</production>
        <consumption>1.5</consumption>
      </item>
      <item sequence_number="3" is_discovered="true">
        <production>500</production>
        <consumption>1000</consumption>
      </item>
    </economic_items>
  </economic_level>
</economic_levels>